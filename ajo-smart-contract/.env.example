# Hedera Network Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID

# TESTNET CONFIGURATION
# Get your testnet account and private key from: https://portal.hedera.com
TESTNET_OPERATOR_PRIVATE_KEY=0xYOUR_TESTNET_PRIVATE_KEY_HERE
TESTNET_ENDPOINT=https://testnet.hashio.io/api

# MAINNET CONFIGURATION (for production use)
#MAINNET_OPERATOR_PRIVATE_KEY=0xYOUR_MAINNET_PRIVATE_KEY_HERE
MAINNET_ENDPOINT=https://mainnet.hashio.io/api

# LOCAL NODE CONFIGURATION (for local development)
# Follow setup instructions at: https://docs.hedera.com/hedera/tutorials/local-node
LOCAL_NODE_OPERATOR_PRIVATE_KEY=0xYOUR_LOCAL_NODE_PRIVATE_KEY_HERE
LOCAL_NODE_ENDPOINT=http://localhost:7546/

# TOKEN ADDRESSES
# Update these with your deployed token addresses
